<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:gravity="center_horizontal"
android:orientation="vertical"
tools:showIn="@layout/activity_core_screen"
tools:context="com.example.samsung.gp.core_screenFragment"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:background="#ffffff"
android:weightSum="1"
android:layout_marginTop="0dp"
android:textAlignment="center">

<TextView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="@string/random"
    android:id="@+id/random"
    android:background="#EFEFEF"
    android:autoText="false"
    android:textColor="#999999"
    android:textStyle="normal"
    android:textSize="15sp"
    android:textAlignment="center"
    android:layout_gravity="top"
    android:layout_marginTop="0dp"
    android:gravity="center" />

<LinearLayout
    android:id="@+id/form"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="left"
    android:weightSum="3"
    android:paddingLeft="16dp"
    android:layout_marginTop="15dp"
    android:orientation="vertical"
    >

    <TextView
        style="@style/AppTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/budgetText"
        android:layout_weight="1"
        android:id="@+id/budgetText"
        android:textColor="#666666"
        android:textSize="20sp"
        android:layout_gravity="left"
        android:textStyle="bold" />

    <EditText
        android:layout_width="147dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="@string/budgetValue"
        android:textColorHint="#B6B6B4"
        android:ems="10"
        android:id="@+id/budgetvalue"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:maxLines="1"
        android:numeric="integer" />

    <TextView
        style="@style/AppTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activities_question"
        android:layout_weight="1"
        android:id="@+id/activities_question"
        android:textColor="#666666"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        android:layout_gravity="left"
        android:textStyle="bold" />

</LinearLayout>


<LinearLayout
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="left"
    android:paddingLeft="16dp"
    android:layout_marginTop="15dp"
    android:layout_gravity="left">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/food"
        android:baseline="@dimen/activity_vertical_margin"
        android:background="@drawable/food_button_pressed"
        android:clickable="true"
        android:focusable="true"
        android:layout_weight="1"
        android:focusableInTouchMode="true"
        android:contentDescription="" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/game"
        android:baseline="@dimen/activity_vertical_margin"
        android:background="@drawable/game_button_pressed"
        android:layout_marginLeft="20dp"
        android:clickable="true"
        android:layout_weight="1"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cinema"
        android:baseline="@dimen/activity_vertical_margin"
        android:background="@drawable/movie_button_pressed"
        android:clickable="true"
        android:layout_weight="1"
        android:focusable="true"
        android:layout_marginLeft="20dp"

        android:focusableInTouchMode="true" />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cafe"
        android:layout_weight="1"
        android:layout_marginLeft="20dp"
        android:baseline="@dimen/activity_vertical_margin"
        android:background="@drawable/cafe_button_pressed"
        android:clickable="true"

        android:focusable="true"
        android:focusableInTouchMode="true" />

</LinearLayout>
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="left"
    android:paddingLeft="16dp"
    android:layout_marginTop="15dp"
    android:layout_gravity="left"
    android:layout_marginLeft="70dp">


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/concert"
        android:baseline="@dimen/activity_vertical_margin"
        android:background="@drawable/concert_button_pressed"
        android:clickable="true"
        android:focusable="true"

        android:focusableInTouchMode="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ahwa"

        android:baseline="@dimen/activity_vertical_margin"
        android:background="@drawable/oriental_button_pressed"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="20dp"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true" />

</LinearLayout>


<LinearLayout
    android:id="@+id/areaForm"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="left"
    android:weightSum="3"
    android:paddingLeft="16dp"
    android:layout_marginTop="5dp"
    android:orientation="vertical"
    >

    <TextView
        style="@style/AppTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/areaText"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:id="@+id/areaText"
        android:textColor="#666666"
        android:textSize="22sp"
        android:layout_gravity="left"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/AreaSpinner"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        android:layout_weight="1"
        android:layout_marginTop="10dp" />

</LinearLayout>

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/YallaButton"
    android:id="@+id/YallaButton"
    android:src="#008080"
    android:layout_marginTop="18dp"
    android:textColor="#ffffff"
    android:textSize="18sp"
    android:typeface="normal"
    android:textStyle="bold"
    android:singleLine="true"
    android:background="@drawable/rounded_yalla_button"/>
</LinearLayout>
