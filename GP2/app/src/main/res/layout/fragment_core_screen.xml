<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrlView"
    tools:showIn="@layout/activity_core_screen"
    tools:context="com.example.samsung.gp.core_screenFragment"
    android:layout_width="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_height="fill_parent" >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:weightSum="4"
    android:layout_marginTop="0dp">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/random"
        android:id="@+id/random"
        android:background="#d7d7d7"
        android:textColor="#008080"
        android:textStyle="normal"
        android:textSize="15sp"
        android:textAlignment="center"
        android:layout_gravity="top"
        android:gravity="center" />

    <LinearLayout
        android:id="@+id/form"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:layout_marginTop="10dp"
        android:layout_marginRight="7dp"
        android:layout_marginLeft="7dp"
        android:background="@drawable/background_shadow"
        android:orientation="vertical"
        >

        <TextView
            style="@style/AppTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/budgetText"
            android:layout_weight="1"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="5dp"
            android:id="@+id/budgetText"
            android:textColor="#666666"
            android:textSize="20sp"
            android:layout_gravity="left"
            android:textStyle="normal" />

        <EditText
            android:layout_width="147dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="@string/budgetValue"
            android:textColorHint="#B6B6B4"
            android:ems="10"
            android:id="@+id/budgetvalue"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:maxLines="1"
            android:numeric="integer" />



    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_weight="1"
        android:weightSum="4"
        android:background="@drawable/background_shadow"
        android:layout_marginTop="3dp"
        android:layout_marginRight="7dp"
        android:layout_marginLeft="7dp"
        android:layout_gravity="left">


    <TextView
        style="@style/AppTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activities_question"
        android:layout_weight="1"
        android:id="@+id/activities_question"
        android:textColor="#666666"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="7dp"
        android:layout_gravity="left"
        android:textStyle="normal" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="16dp"
            android:weightSum="4"
            android:layout_marginTop="5dp"
            android:layout_gravity="left">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/food"
                android:baseline="@dimen/activity_vertical_margin"
                android:button="@drawable/food_button_pressed"
                android:clickable="true"
                android:layout_weight="1"
                android:checked="false" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/game"
                android:baseline="@dimen/activity_vertical_margin"
                android:button="@drawable/game_button_pressed"
                android:layout_marginLeft="20dp"
                android:clickable="true"
                android:layout_weight="1"
                />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cinema"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:baseline="@dimen/activity_vertical_margin"
                android:button="@drawable/movie_button_pressed"
                android:clickable="true"

                />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cafe"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:baseline="@dimen/activity_vertical_margin"
                android:button="@drawable/cafe_button_pressed"
                android:clickable="true"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="16dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="left"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="70dp"
            android:weightSum="2">


            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dessert"
                android:baseline="@dimen/activity_vertical_margin"
                android:button="@drawable/dessert_button_pressed"
                android:clickable="true"
                />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ahwa"
                android:baseline="@dimen/activity_vertical_margin"
                android:button="@drawable/oriental_button_pressed"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="20dp"
                android:clickable="true"
                />
    </LinearLayout>



    </LinearLayout>


    <LinearLayout
        android:id="@+id/areaForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:weightSum="3"
        android:background="@drawable/background_shadow"
        android:layout_marginTop="3dp"
        android:layout_marginRight="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        >

        <TextView
            style="@style/AppTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/areaText"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:id="@+id/areaText"
            android:textColor="#666666"
            android:textSize="22sp"
            android:layout_marginLeft="7dp"
            android:textStyle="normal" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:gravity="left"
            android:layout_marginBottom="5dp"
            android:background="@drawable/spinner_border"
            android:layout_gravity="left"
         w   android:layout_marginTop="4dp">

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:spinnerMode="dropdown"
                android:gravity="left"
                android:clickable="true"
                android:focusable="true" />
        </RelativeLayout>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text= "@string/YallaButton"
        android:id="@+id/YallaButton"
        android:layout_marginTop="5dp"
        android:textColor="#ffffff"
        android:layout_weight="1"
        android:textSize="15sp"
        android:typeface="normal"
        android:singleLine="true"
        android:background="@drawable/rounded_yalla_button" />
</LinearLayout>
    </ScrollView>