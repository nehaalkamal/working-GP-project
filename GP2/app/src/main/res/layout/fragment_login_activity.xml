<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:gravity="center_horizontal"
android:orientation="vertical"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
tools:showIn="@layout/activity_login_activity"
tools:context="com.example.samsung.gp.LoginActivityFragment"
android:background="#008080"
android:weightSum="1">


<ImageView
    android:layout_width="122dp"
    android:layout_height="122dp"
    android:id="@+id/coffesign"
    android:layout_alignParentLeft="true"
    android:baseline="@dimen/activity_vertical_margin"
    android:src="@drawable/cafesign"
    android:alpha=".10"
    android:layout_gravity="left|center_horizontal" />



<LinearLayout
    android:id="@+id/email_login_form"
    android:layout_width="273dp"
    android:layout_height="195dp" android:orientation="vertical"
    android:weightSum="4">

    <AutoCompleteTextView
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:hint="@string/prompt_email"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:singleLine="true"
        android:background="#ffffff"
        android:layout_weight="1"
        android:typeface="normal"
        android:drawableLeft="@drawable/social"
        android:textColor="#8e8b8b"
        android:textIsSelectable="true"
        android:textSize="20dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center|center_horizontal|center_vertical|top"
        android:selectAllOnFocus="false"
        />


    <EditText android:id="@+id/password" android:layout_width="match_parent"
        android:layout_height="0dp" android:hint="@string/prompt_password"
        android:imeActionLabel="@string/action_sign_in_short"
        android:imeOptions="actionUnspecified" android:inputType="textPassword"
        android:maxLines="1" android:singleLine="false"
        android:layout_weight="1"
        android:background="#ffffff"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/tool"
        android:textColor="#8e8b8b"
        android:textSize="20dp"
        android:password="true"
        android:typeface="normal"
        />

    <Button
        style="?android:textAppearanceSmall"
        android:id="@+id/email_sign_in_button"
        android:layout_width="126dp"
        android:layout_height="0dp"
        android:text="@string/action_sign_in"
        android:layout_weight="1"
        android:textStyle="bold"
        android:textColor="#008080"
        android:background="#ffffff"
        android:textSize="25dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center" />

    <TextView
        style="@style/AppTheme"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Sign up"
        android:layout_weight="1"

        android:id="@+id/SignUp"
        android:autoLink="web"
        android:textColor="#ffffffff"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:clickable="true" />
</LinearLayout>


<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <ImageView
        android:layout_width="61dp"
        android:layout_height="38dp"
        android:id="@+id/facebook"
        android:baseline="@dimen/activity_vertical_margin"
        android:src="@drawable/facebook"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <ImageView
        android:layout_width="61dp"
        android:layout_height="38dp"
        android:id="@+id/twitter"
        android:baseline="@dimen/activity_vertical_margin"
        android:src="@drawable/twitter"
        />
    <ImageView
        android:layout_width="61dp"
        android:layout_height="38dp"
        android:id="@+id/mail"
        android:baseline="@dimen/activity_vertical_margin"
        android:src="@drawable/gmail"
        android:clickable="true"
        android:focusable="true" />

</LinearLayout>

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="2"
    android:layout_gravity="bottom|right">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="113dp"
        android:id="@+id/imageView4"
        android:src="@drawable/restaurant"
        android:alpha=".10"
        android:layout_weight="1"
        android:layout_gravity="right"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:layout_weight="1"
        android:id="@+id/imageView3"
        android:src="@drawable/playinfilm"
        android:alpha=".10" />


</LinearLayout>

</LinearLayout>



